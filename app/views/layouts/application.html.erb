<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <script src="https://kit.fontawesome.com/63dfe39e70.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <span class="navbar-brand"><%= link_to "Bookers", root_path %></span>
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-link text-light">
                  <%= link_to user_path(current_user.id) do %>
                     <strong><i class="fas fa-home"></i><span>Home</span></strong>
                  <% end %>
                </li>
                <li class="nav-link text-light">
                  <%= link_to users_path do %>
                    <strong><i class="fas fa-users"></i><span>Users</span></strong>
                  <% end %>
                </li>
                <li class="nav-link text-light">
                  <%= link_to books_path do %>
                    <strong><i class="fas fa-book-open"></i><span>Books</span></strong>
                  <% end %>
                </li>
                <li class="nav-link text-light">
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <strong><i class="fas fa-sign-out-alt"></i><span>Log out</span></strong>
                  <% end %>
                </li>
              <% else %>
                <li class="nav-link text-light">
                  <%= link_to root_path do %>
                    <strong><i class="fas fa-home"></i><span>Home</span></strong>
                  <% end %>
                </li>
                <li class="nav-link text-light">
                  <%= link_to about_path do %>
                    <strong><i class="fas fa-link"></i><span>About</span></strong>
                  <% end %>
                </li>
                <li class="nav-link text-light">
                  <%= link_to new_user_registration_path do %>
                    <strong><i class="fas fa-user-plus"></i><span>Sign up</span></strong>
                  <% end %>
                </li>
                <li class="nav-link text-light">
                  <%= link_to new_user_session_path do %>
                    <strong><i class="fas fa-sign-in-alt"></i><span>Log in</span></strong>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
  　</header>
  　<main>
      <p><%= flash[:notice] %></p>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
